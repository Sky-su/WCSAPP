<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coloritemlistbj"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorbjtop">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="定时"
                android:textColor="@color/colorblack"
                android:textSize="25sp"
                style="@style/item_showtasklisttext" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/dialog_time"
                android:layout_width="80dp"
                android:gravity="center"
                android:hint="10"
                android:textColorHint="@color/colorlogined"
                android:inputType="number"
                android:maxLength="3"
                android:backgroundTint="@color/colorlogined"
                android:textColor="@color/colorlogined"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorlogined"
                android:text="分钟"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <Button
                android:id="@+id/dialog_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/dialog_button_no"
                android:text="取消"
                />
            <Button
                android:id="@+id/dialog_yes"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/dialog_button_yes"
                android:textColor="@color/colorblack"
                android:text="确认"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>