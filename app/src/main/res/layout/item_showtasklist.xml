<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coloritemlistbj"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/button_itemlistview_edit"
        android:elevation="4dp"
        android:layout_marginTop="15dp"
        android:paddingStart="10dp"
        android:layout_marginStart="12dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="12dp">
        <TextView
            style="@style/item_showtasklisttitleone"
            android:id="@+id/showtasklistgoodname"
            android:text="商品名称:"
            android:paddingTop="16dp"
            android:textColor="#626262"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            style="@style/item_showtasklisttext"
            android:id="@+id/showtasklistgoodnames"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@+id/showtasklistgoodname"
            app:layout_constraintBottom_toBottomOf="@+id/showtasklistgoodname"
            app:layout_constraintTop_toTopOf="@+id/showtasklistgoodname"/>

        <View
            style="@style/item_showtasklisttitle"
            android:id="@+id/viewtasklist"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showtasklistgoodname"
            app:layout_constraintStart_toStartOf="@+id/showtasklistgoodname"/>
        <TextView
            style="@style/item_showtasklisttitle"
            android:id="@+id/showtasklistgoodId"
            android:text="sku编号:"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/viewtasklist"
            app:layout_constraintStart_toStartOf="@+id/showtasklistgoodname"
            />
        <TextView
            style="@style/item_showtasklisttext"
            android:id="@+id/showtasklistskuid"
            app:layout_constraintStart_toEndOf="@+id/showtasklistgoodId"
            app:layout_constraintBottom_toBottomOf="@+id/showtasklistgoodId"
            app:layout_constraintTop_toTopOf="@+id/showtasklistgoodId"/>

        <TextView
            style="@style/item_showtasklisttitle"
            android:id="@+id/item_showtasklistnumber"
            android:text="补货数量:"
            app:layout_constraintTop_toBottomOf="@+id/showtasklistgoodId"
            app:layout_constraintStart_toStartOf="@+id/showtasklistgoodId"/>
        <TextView
            style="@style/item_showtasklisttext"
            android:id="@+id/showtasklistskunumber"
            app:layout_constraintStart_toEndOf="@+id/item_showtasklistnumber"
            app:layout_constraintBottom_toBottomOf="@+id/item_showtasklistnumber"
            app:layout_constraintTop_toTopOf="@+id/item_showtasklistnumber"/>

        <TextView
            style="@style/item_showtasklisttitle"
            android:id="@+id/item_showtasklisttime"
            android:text="补货时间:"
            app:layout_constraintTop_toBottomOf="@+id/item_showtasklistnumber"
            app:layout_constraintStart_toStartOf="@+id/item_showtasklistnumber"/>

        <TextView
            style="@style/item_showtasklisttext"
            android:id="@+id/showtasklistskuTime"
            app:layout_constraintStart_toEndOf="@+id/item_showtasklisttime"
            app:layout_constraintBottom_toBottomOf="@+id/item_showtasklisttime"
            app:layout_constraintTop_toTopOf="@+id/item_showtasklisttime"/>

        <TextView
            style="@style/item_showtasklisttitle"
            android:id="@+id/item_showtasklistcount"
            android:text="补货库位:"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toBottomOf="@+id/item_showtasklisttime"
            app:layout_constraintStart_toStartOf="@+id/item_showtasklisttime"/>

        <TextView
            style="@style/item_showtasklisttext"
            android:id="@+id/showtasklistskucount"
            app:layout_constraintStart_toEndOf="@+id/item_showtasklistcount"
            app:layout_constraintBottom_toBottomOf="@+id/item_showtasklistcount"
            app:layout_constraintTop_toTopOf="@+id/item_showtasklistcount"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>